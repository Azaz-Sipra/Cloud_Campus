	<div class="login-form">
		
		<div class="login-content">
			
		
    @using (Html.BeginForm("LoginCheck","Home",FormMethod.Post))
    {
            
        <div class="form-group">
                    <link href="~/Content/c1.css" rel="stylesheet" />
                   @* @Html.LabelFor(m=>m.User_Name,new {id="name"});*@
					<div class="input-group">
						<div class="input-group-addon">
							
                            <i class="user icon"></i>
						</div>
                        @*@Html.LabelFor(m=>m.User_Name,new {id="name"});*@
                        @*<div class="form-control">*@
						@*@Html.TextBoxFor(m => m.User_Name, new { id = "name",placeholder="User Name",value=" ",@class="form-control"})*@
                            @*</div>*@
						<input type="text" class="form-control" name="User_Name" id="name" placeholder="User Name" autocomplete="off" data-mask="name" value="" required />
					    
                    
                    </div>
					
				</div>
        <div id="result"></div>
                        <div class="form-group">
                    
					<button type="button" class="btn btn-primary btn-block btn-login" value="submit" id="b2">
