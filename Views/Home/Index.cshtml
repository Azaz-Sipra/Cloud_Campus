						Check
					</button>
				</div>
        				
				<div class="form-group" id="h">
					
					<div class="input-group">
						<div class="input-group-addon">
							
                            <i class="lock icon"></i>
						</div>
						@*@Html.TextBoxFor(m => m.password, new { id = "password",placeholder="password",value=" "})*@
						<input type="password" class="form-control" name="password" id="password" placeholder="Password" autocomplete="off" value=""  required/>
					</div>
				
				</div>
				
				<div class="form-group">
                    
					<button type="submit" class="btn btn-primary btn-block btn-login" value="submit" id="b1">
                          <i class="newwindow icon"></i>
						Login
					</button>
				</div>
				
				
    }
           


			
           </div>
		
	    
        </div>
     
    @Scripts.Render("~/bundles/jquery")
    <script>

        $(document).ready(function () {

            $('#h').hide();
            $('#b1').hide();
            //$('#result').hide();

            $('#b2').click(function () {

                var userName = $('#name').val();

                //alert('User Name ='+ userName);
                //$('#checking').show();
                $.getJSON("/home/CheckUserName?User_Name=" + userName, function (data) {
                    //$('#checking').hide();
                    if (data) {
                        $('#result').text("User Name Exist");
                        $('#b2').hide();
                        $('#h').show();
                        $('#b1').show();
                        

                    }
                    else {
                        $('#result').text("User Name Not Exist");
                        
                    }
                });

            });

        });
    </script>
